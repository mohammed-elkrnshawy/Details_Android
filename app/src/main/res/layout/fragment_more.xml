<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:background="@color/ColorGray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageHome.MoreFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginBottom="-10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/line"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_choco"
                        android:drawableEnd="@drawable/ic_previous"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:text="محلات الشوكولاه"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".4dp"
                        android:background="@color/ColorGray2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:drawableEnd="@drawable/ic_previous"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:text="محلات الحلويات"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".4dp"
                        android:background="@color/ColorGray2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:drawableEnd="@drawable/ic_previous"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:text="محلات العصائر"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".4dp"
                        android:background="@color/ColorGray2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:drawableEnd="@drawable/ic_previous"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:text="المخابز و الموالح"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".4dp"
                        android:background="@color/ColorGray2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:drawableEnd="@drawable/ic_previous"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:text="أسر منتجة"
                        android:padding="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".4dp"
                        android:background="@color/ColorGray2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:paddingBottom="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/food"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="الطعام"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="65dp"
                android:layout_height="65dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="الضيافة"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/flower"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="الورد"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/song"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="الطرب"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/clothes"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="أناقتى"
                android:textAlignment="center"/>

            <RelativeLayout
                android:id="@+id/relative_booking"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_circle"
                android:layout_width="55dp"
                android:layout_height="55dp">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/me"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="حجوزاتى"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>